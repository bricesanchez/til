    link rel="stylesheet" type="text/css" href=asset_path(:css, "assets/public")
    script type="text/javascript" src=asset_path(:js, "assets/public")

  body

    aside#sidebar.sidebar
      a href="#" class="close-sidebar" Hide topics &rsaquo;
